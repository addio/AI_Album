<!--pages/manage/index.wxml-->
<view class='page'>
  <view class="page__hd">
    <view class="page__title">编辑</view>
    <view class="page__desc">新建或修改相册</view>
  </view>

  <view class="page__bd">
    <view class="weui-cells__title">请输入相册名</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell ">
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入文本" bindblur='bindName' value='{{name}}' />
        </view>
      </view>
    </view>

    <view class="weui-cells__title">请输入相册地点</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell ">
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入文本" bindblur='bindArea' value='{{area}}' />
        </view>
      </view>
    </view>

    <view class="weui-cells__title">请输入相册描述</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" placeholder="请输入文本" style="height: 3.3em" bindblur='bindText' value='{{remark}}' />
          <view class="weui-textarea-counter">0/200</view>
        </view>
      </view>
    </view>
  </view>

  <button class="weui-btn mini-btn" type="primary" size="large" bindtap="bindButton">确定并保存</button>

  <view class="weui-tabbar">
    <view class="weui-tabbar__item">
      <navigator bindtap='toIndex'>
        <view style="position: relative;display:inline-block;">
          <image src="http://demo.sc.chinaz.com/Files/pic/icons/5823/269.png" class="weui-tabbar__icon"></image>
        </view>
        <view class="weui-tabbar__label">相册列表</view>
      </navigator>
    </view>
    <view class="weui-tabbar__item">
      <navigator bindtap='toSearch'>
        <view style="position: relative;display:inline-block;">
          <image src="http://demo.sc.chinaz.com/Files/pic/icons/5823/260.png" class="weui-tabbar__icon"></image>
        </view>
        <view class="weui-tabbar__label">图片搜索</view>
      </navigator>
    </view>
    <view class="weui-tabbar__item">
      <navigator bindtap='toUpload'>
        <view style="position: relative;display:inline-block;">
          <image src="http://demo.sc.chinaz.com/Files/pic/icons/5823/263.png" class="weui-tabbar__icon"></image>
        </view>
        <view class="weui-tabbar__label">我要上传</view>
      </navigator>
    </view>
    <view class="weui-tabbar__item">
      <navigator bindtap='toManage'>
        <view style="position: relative;display:inline-block;">
          <image src="http://demo.sc.chinaz.com/Files/pic/icons/5823/265.png" class="weui-tabbar__icon"></image>
        </view>
        <view class="weui-tabbar__label">相册管理</view>
      </navigator>
    </view>
  </view>
  <text>\n\n</text>
  <view class="weui-footer">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>